#include <stdio.h>
void caseconv(char in[], char out[]) {
    int i = 0;
    while (in[i] != '\0') {
        if (in[i] >= 'a' && in[i] <= 'z') {
            out[i] = in[i] - 32;
        } else if (in[i] >= 'A' && in[i] <= 'Z') {
            out[i] = in[i] + 32;
        } else {
            out[i] = in[i];
        }
        i++;
    }
    out[i] = '\0';
}
void backward(char in[], char out[]) {
    int len = 0;
    while (in[len] != '\0') {
        len++;
    }
    for (int i = 0; i < len; i++) {
        out[i] = in[len - 1 - i];
    }
    out[len] = '\0';
}
int main() {
    char in[100];   
    char temp[100]; 
    char out[100];  
    printf("문자열을 입력하세요: ");
    scanf("%s", in);
    caseconv(in, temp);
    backward(temp, out);
    printf("대소문자 변환 후 거꾸로 변환된 문자열: %s\n", out);
    return 0;
}
